<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <script
      src="https://kit.fontawesome.com/6ea2cb925f.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>POS - Sales</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="/stylesheets/all.min.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="/stylesheets/sb-admin-2.min.css" />
  <style>
    thead {
  display: table-header-group;
}

  </style>
  </head>
  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
     <%- include('../partials/sidebar.ejs') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
         <%- include('../partials/topbar.ejs') %>
          <!-- End of Topbar -->
        <div class="container-fluid">
          <!-- Begin Page Content -->
          <h1 class="h3 mb-2 text-gray-800">Sales</h1>
          <div class="card shadow mb-4">
            <div class="card-header py-3">
                  <span class="m-0 font-weight-bold text-primary">Transactions</span>
            </div>
          <div class="card-body">
            <form action="/sales/add/sales" method="post" class="row g-3 needs-validation" novalidate>
                <div class="col-md-4">
                  <label for="invoice" class="form-label">Invoice</label>
                  <input type="text" class="form-control" id="invoice" name="invoice" value="<%= data.invoice %>" readonly>
                  <div class="valid-feedback">
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="time" class="form-label">Time</label>
                  <input type="text" class="form-control" id="time" value="<%= moment(data.time).format('dddd, MMMM Do YYYY, h:mm:ss a') %>" readonly>
                  <div class="valid-feedback">
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="operator" class="form-label">Operator</label>
                  <div class="input-group has-validation">
                    <input type="text" class="form-control" id="operator" aria-describedby="inputGroupPrepend" value="<%= dataa.name %>" readonly>
                    <div class="invalid-feedback">
                    </div>
                  </div>
                </div>
                <hr style="height:20px;padding-top:30px;">
                <div class="col-md-4">
                  <label for="selectBarcode" class="form-label">Goods Barcode</label>
                  <select name="barcode" class="form-select" aria-label="Default select example" id="selectBarcode">
                    <option>Open this select menu</option>
                    <% datagood.forEach(good => { %>
                      <option value="<%= good.barcode.toString() %>"><%= good.barcode.toString() %> - <%= good.name.toString() %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="col-md-4">
                  <label for="namegoods" class="form-label">Goods Name</label>
                  <input type="text" class="form-control" id="namegoods" value="" readonly>
                  <div class="valid-feedback"></div>
                </div>
                <div class="col-md-4">
                  <label for="stockgoods" class="form-label">Stock</label>
                  <div class="input-group has-validation">
                    <input type="text" class="form-control" id="stockgoods" name="stockgoods" aria-describedby="inputGroupPrepend" readonly>
                    
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="sellingpricegoods" class="form-label">Selling Price</label>
                  <input type="text" class="form-control" id="sellingpricegoods" name="sellingpricegoods" value="" required>
                  
                </div>
                  <div class="col-md-4">
                    <label for="qtygoods" class="form-label">Qty</label>
                    <input type="text" class="form-control" id="qtygoods" name="qtygoods" value="" required>
                    <div class="valid-feedback">
                    </div>
                  </div>
                  <div class="col-md-4">
                    <label for="totalprice" class="form-label">Total Price</label>
                    <div class="input-group has-validation">
                      <input type="text" class="form-control" id="totalprice" name="totalprice" aria-describedby="inputGroupPrepend" required>
                      <div class="invalid-feedback">
                      </div>
                    </div>
                  </div>
                  <div class="card-header py-3">
                    <button type="submit" id="add" class="btn btn-primary btn-icon-split">
                      <span class="icon text-white-50">
                        <i class="fa-solid fa-plus"></i>
                      </span>
                      <span class="text">Add</span>
                    </button>
                </div>
                <table class="table table-striped" id="purchaseitems">
                  <thead>
                    <tr>
                    <th>No.</th>
                    <th>Barcode</th>
                    <th>Name</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Total Price</th>
                    <th>Actions</th>
                  </tr>
                  </thead>
                  <tbody id="salesitem">
                    
                  </tbody>
                </table>
                
                <div class="row mb-3">
                  <label for="totalsum" class="col-sm-2 col-form-label">Total Summary</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="totalsum" id="totalsum" readonly >
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="pay" class="col-sm-2 col-form-label">Pay</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="pay" id="pay" value="<%= data.pay %>" >
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="moneychange" class="col-sm-2 col-form-label">Change</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="moneychange" id="moneychange" readonly >
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="customer" class="col-sm-2 col-form-label">Customer</label>
                  <div class="col-sm-10">
                    <select name="customer" class="form-select" aria-label="Default select example" id="customer">
                      <option>Open this select menu</option>
                      <% customers.forEach(item => { %>
                        <option value="<%=item.customerid%>" <%= item.customerid === data.customer ? 'selected' : '' %>><%=item.name%></option>
                      <% }) %>
                    </select>
                    
                  </div>
                </div>
              </div>
              <br><br>
              <div class="card-header py-3">
                <button type="submit" id="submitAll" class="btn btn-success btn-icon-split">
                  <span class="icon text-white-50">
                      <i class="fa-solid fa-plus"></i>
                  </span>
                  <span class="text">Save</span>
              </button>
              <a href="/sales" class="btn btn-warning btn-icon-split">
                  <span class="icon text-white-50">
                    <i class="fa-solid fa-arrow-left"></i>
                  </span>
                  <span class="text">Back</span>
              </a>
          </div>
            </form>
        </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../partials/footer.ejs') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('../partials/logoutModal.ejs')%>
    
    <!-- Bootstrap core JavaScript-->
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/javascripts/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/javascripts/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/javascripts/jquery.dataTables.min.js"></script>
    <script src="/javascripts/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.6/numeral.min.js"></script>
    <script>
      let invoice = '<%= data.invoice %>';
          $(document).ready(function() {
            const selectBarcode = $('#selectBarcode');
            const inputGoodsName = $('#namegoods');
            const inputStock = $('#stockgoods');
            const inputSellingPrice = $('#sellingpricegoods');
            const inputqty = $('#qtygoods');
            const inputtotal = $('#totalprice');
       
                $('#add').on('click', function(event) {
                  event.preventDefault();
    
                  $.ajax({
                    url: '/sales/add/items',
                    method: 'POST',
                    data: {
                      invoice: $('#invoice').val(),
                      barcode: $('#selectBarcode').val(),
                      qtygoods: $('#qtygoods').val(),
                      sellingpricegoods: $('#sellingpricegoods').val(),
                      totalprice: $('#totalprice').val()
                    },
                    success: function(response) {
                      readTable()
                    },
                    error: function(err) {
                      console.log(err);
                    }
                  });
                });
    
            selectBarcode.on('change', function() {
              const selectedBarcode = selectBarcode.val();
        
              $.ajax({
                url: `/sales/get/${selectedBarcode}`, // Endpoint router yang sesuai
                method: 'GET',
                success: function(response) {
                  // Response berisi data dari router
                  const selectedGood = response[0];
        
                  // Mengisi nilai input dengan data terkait
                  inputGoodsName.val(selectedGood.name || '');
                  inputStock.val(selectedGood.stock || '');
                  inputSellingPrice.val(selectedGood.sellingprice || '');
                  inputqty.val('0');
                  inputtotal.val('0');
                },
                error: function(err) {
                  console.log(err);
                }
              });
            });
        
            inputqty.on('input', function() {
              calculateTotalPrice();
            });
        
            function calculateTotalPrice() {
              const qty = parseFloat(inputqty.val());
              const sellingPrice = parseFloat(inputSellingPrice.val());
              if (!isNaN(qty) && !isNaN(sellingPrice)) {
                const totalprice = qty * sellingPrice;
                inputtotal.val('Rp ' + numeral(totalprice.toFixed(2)).format('0,0.00'));
              }
            }
            readTable()
          });
          function calculateTotalAllPrice() {
              const total = $('#totalsum');
              var totalHarga = 0;

              $('.table-row').each(function() {
                var harga = parseFloat($(this).find('td:eq(5)').text().replace('Rp ', '').replace(',', ''));

                if (!isNaN(harga)) {
                  totalHarga += harga;
                }
              });

              var hargaFormatted = numeral(totalHarga).format('0,0.00');
              total.val('Rp ' + hargaFormatted);
            }


            function calculateChange() {
              var pay = parseFloat($('#pay').val().replace(',', ''));
              var totalsum = parseFloat($('#totalsum').val().replace('Rp ', '').replace(',', ''));

                if (isNaN(pay) || isNaN(totalsum)) {
                  $('#moneychange').val('');
                } else {
                  var change = pay - totalsum;
                  var returnmoney = numeral(change).format('0,0.00')
                  $('#moneychange').val('Rp ' + returnmoney);
                }
            }

              // Event listener untuk input "pay"
              $('#pay').on('input', calculateChange);

          // Fungsi untuk membaca tabel
          const readTable = () => {
            $.get(`/sales/get/edit/item/${invoice}`).done((data) => {
            let html = '';
            data.forEach((item, index) => {
              const formattedTotalPrice = 'Rp ' + numeral(item.totalprice).format('Rp0,0.00');
              html += `
            <tr class="table-row">
            <td>${index + 1}</td>
            <td>${item.itemcode}</td>
            <td>${item.name}</td>
            <td>${item.quantity}</td>
            <td>${item.sellingprice}</td>
            <td>${formattedTotalPrice}</td>
            <td>
              <a href="#" class="btn btn-circle btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal${item.id}">
                <i class="fas fa-solid fa-trash"></i>
              </a>
              <div class="modal fade" id="deleteModal${item.id}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Konfirmasi Penghapusan</h5>
                      <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                      </button>
                    </div>
                    <div class="modal-body">Apakah Anda yakin ingin menghapusnya?</div>
                    <div class="modal-footer">
                      <button class="btn btn-secondary" type="button" data-dismiss="modal">Tidak</button>
                      <a class="btn btn-primary" href="/sales/deleteitems/${item.id}">Ya</a>
                    </div>
                  </div>
                </div>
              </div>
            </td>
              </tr>
            `;
                });
                $('#salesitem').html(html);
                calculateTotalAllPrice(); 
                calculateChange()
            });
          
          };

var message = document.getElementById('messages')
var alerts = document.getElementById('alert')  
var navbar = document.getElementById('navbar');
var users = document.getElementById('Users');
var collapseUtilities = document.getElementById('Utilities');

  if ('<%= user.role %>' !== 'admin') {
  navbar.style.display = 'none';
  users.style.display = 'none';
  collapseUtilities.style.display = 'none';
  alerts.style.display = 'none';
  message.style.display = 'none';
}
        </script>
    
  </body>
</html>
