  method: "GET",
  success: function (data) {
    // Menghitung jumlah customer dengan value 4 (direct) dan value selain itu (customer)
    var directCount = 0;
    var customerCount = 0;

    data.forEach(function (item) {
      if (item.customer === 4) {
