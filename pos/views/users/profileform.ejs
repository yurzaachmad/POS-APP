<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <script
      src="https://kit.fontawesome.com/6ea2cb925f.js"
      crossorigin="anonymous"
    ></script>
    <title>POS - Profile</title>

    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="/stylesheets/all.min.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/dataTables.bootstrap4.min.css" />

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="/stylesheets/sb-admin-2.min.css" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
     <%- include('../partials/sidebar.ejs') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
         <%- include('../partials/topbar.ejs') %>
          <!-- End of Topbar -->
        <div class="container-fluid">
          <!-- Begin Page Content -->
          <% if(succesMessage.length > 0) { %>
            <div class="alert alert-success" role="alert">
              <%= succesMessage %>
            </div>
            <% } %>
            <% if(errorMessage.length > 0) { %>
              <div class="alert alert-danger" role="alert">
                <%= errorMessage %>
              </div>
              <% } %>
            <% if(succesMessagePassword.length > 0) { %>
              <div class="alert alert-success" role="alert">
                <%= succesMessagePassword %>
              </div>
              <% } %>
              <% if(errorRegister.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                  <%= errorRegister %>
                </div>
                <% } %>
          <h1 class="h3 mb-2 text-gray-800" <% if (isProfile) { %>style="display: none;"<% } %>>Profile</h1>
          <h1 class="h3 mb-2 text-gray-800" <% if (!isProfile) { %>style="display: none;"<% } %>>Password</h1>
          <div class="card shadow mb-4">
            <div class="card-header py-3">
                <span class="m-0 font-weight-bold text-primary" <% if (isProfile) { %>style="display: none;"<% } %>>Your Profile</span>
                <span class="m-0 font-weight-bold text-primary" <% if (!isProfile) { %>style="display: none;"<% } %>>Change Your Password</span>
            </div>
          <div class="card-body">
            <form action="" method="post">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <div class="mb-3 row" <% if (isProfile) { %>style="display: none;"<% } %>>
                        <label for="email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                          <input type="email" class="form-control" id="email" name="email" value="<%= data.email %>">
                        </div>
                      </div>
                      <div class="mb-3 row" <% if (isProfile) { %>style="display: none;"<% } %>>
                        <label for="name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>">
                        </div>
                      </div>
                      <div class="mb-3 row"  <% if (isEdit) { %>style="display: none;"<% } %>>
                        <label for="password" class="col-sm-2 col-form-label">Old Password</label>
                        <div class="col-sm-10">
                          <input type="password" class="form-control" id="password" name="password">
                        </div>
                      </div>
                      <div class="mb-3 row"  <% if (isEdit) { %>style="display: none;"<% } %>>
                        <label for="newpassword" class="col-sm-2 col-form-label">New Password</label>
                        <div class="col-sm-10">
                          <input type="password" class="form-control" id="newpassword" name="newpassword">
                        </div>
                      </div>
                      <div class="mb-3 row"  <% if (isEdit) { %>style="display: none;"<% } %>>
                        <label for="retypepassword" class="col-sm-2 col-form-label">Retype Password</label>
                        <div class="col-sm-10">
                          <input type="password" class="form-control" id="retypepassword" name="retypepassword">
                        </div>
                      </div>
                </table>
                <button type="submit" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fa-solid fa-database"></i>
                    </span>
                    <span class="text">Update</span>
                </button>
                <br><br>
            </div>
        </form>
        </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../partials/footer.ejs') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('../partials/logoutModal.ejs')%>

    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/javascripts/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/javascripts/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/javascripts/jquery.dataTables.min.js"></script>
    <script src="/javascripts/dataTables.bootstrap4.min.js"></script>
    <script>
      var alerts = document.getElementById('alert')
var navbar = document.getElementById('navbar');
var users = document.getElementById('Users');
var collapseUtilities = document.getElementById('Utilities');

  if ('<%= user.role %>' !== 'admin') {
    navbar.remove()
  users.remove()
  collapseUtilities.remove()
  alerts.remove()
}
    </script>
  </body>
</html>
